<p id="notice"><%= notice %></p>

<h1>Addvs</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addvs.each do |addv| %>
      <tr>
        <td><%= addv.title %></td>
        <td><%= link_to "View Add", addv.image_url %></td>
        <td><%= addv.organization %></td>
        <td><%= link_to 'Show', addv , class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_addv_path(addv) , class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', addv, method: :delete, data: { confirm: 'Are you sure?' , class: "btn btn-primary" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Addv', new_addv_path %>
